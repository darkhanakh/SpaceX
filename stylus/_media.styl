@media (max-width 960px) 
  .rocket 
    max-width 230px      
  .table-col 
    width 250px  

@media (max-width 768px)
  .header 
    flex-direction column
    align-items center
    .main-nav 
      margin-bottom 20px
    &__logo 
      margin-bottom 20px
  .rocket
    max-width 180px    
  .video 
    width 100%
@media (max-width 576px)
  .features
    padding-bottom 0
  .main
    padding-top 50px
  .rocket
    position static
    margin-bottom 30px
  .table 
    margin-bottom 0
    padding-bottom 0 
    &__column 
      font-size 14px
      width 150px 
  .footer
    text-align center
    &__text
      text-align center
      display inline-block
    &-nav
      .list 
        flex-wrap wrap
        align-items center
        justify-content center
        &__item
          margin-bottom 10px   